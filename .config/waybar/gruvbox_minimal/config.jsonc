	"clock": {
		"tooltip": true,
		"interval": 60,
		"format": "{:%I:%M %p}",
		"format-alt": "{:%a %d, %I:%M %p}",
		"tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
	},
